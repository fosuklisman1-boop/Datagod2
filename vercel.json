{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "crons": [
    {
      "path": "/api/cron/sync-mtn-status",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/cron/verify-pending-payments",
      "schedule": "*/2 * * * *"
    },
    {
      "path": "/api/cron/sync-codecraft-status",
      "schedule": "*/5 * * * *"
    }
  ]
}
